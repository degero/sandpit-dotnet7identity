@using System.Security.Principal

<ul class="navbar-nav">
  @if (User.Identity?.IsAuthenticated == true)
  {
    <li class="nav-item">
      <span class="navbar-text text-dark">Hello @User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
      <a class="nav-link text-dark" asp-page="/logout">Sign out of app</a>
      <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign
        out of your Microsoft account (microsoft.identity.web mode)</a>
    </li>
  }
  else
  {
    <li class="nav-item">
      <a class="nav-link text-dark" asp-page="/securepage">Sign in</a>
      <a class="nav-link text-dark" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in
        (microsoft.identity.web mode)</a>
    </li>
  }
</ul>